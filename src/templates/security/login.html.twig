{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="shadow-lg  flex w-4/12 m-auto bg-primary mt-40 ">
        <div class="w-full p-4 w-6/12">
            <div class="text-gray-700">
                <h2>Connexion</h2>
                <p class="mt-2 text-xs text-gray-base">Connectez vous pour accéder à la plate-forme</p>
            </div>

                <div class="mt-3">
          <span class="flex items-center px-3">
            <i data-feather="mail" class="mr-3"></i>
            <label for="inputEmail" class=" appearance-none border rounded w-full py-2 px-3 text-inverse-soft leading-tight focus:outline-none focus:shadow-outline">
                <input class="p-2 w-full text-default hover:bg-white hover:border-gray-300 f focus:shadow-outline "  type="email" value="{{ last_username }}" name="email" id="inputEmail"  placeholder="Email" required autofocus>
            </label>
          </span>

                    <span class="flex bg-gray-300 items-center mt-2 px-3">
            <i data-feather="lock" class="mr-3"></i>
            <label for="inputPassword" class="bg-gray-100 appearance-none border rounded w-full py-2 px-3 text-inverse-soft leading-tight focus:outline-none focus:shadow-outline" >
                <input class="p-2 w-full text-default hover:bg-primary hover:border-gray-300 focus:outline-none focus:bg-primary focus:shadow-outline" type="password" name="password" id="inputPassword"  placeholder="Mot de passe" required>
           <input type="hidden" name="_csrf_token"
                  value="{{ csrf_token('authenticate') }}"
           >
            </label>
          </span>

                </div>
                <div class="flex justify-between items-center mt-4">
                    <button class="hover:bg-secondary bg-blue-500 hover:bg-blue-400 px-4 py-2 text-white">Connexion</button>
                    <a href="#" class="text-xs underline-none text-blue-400 hover:text-blue-600">Mot de passe oublié ?</a>
                </div>

        </div>

    </div>

</form>

    {% endblock %}
