{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>EmailAddress</th>
                <th>Password</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>BirthDate</th>
                <th>RegistrationDate</th>
                <th>UpdateDate</th>
                <th>Country</th>
                <th>ProfilePicture</th>
                <th>IsAdmin</th>
                <th>IsOnline</th>
                <th>Status</th>
                <th>City</th>
                <th>SpokenLanguages</th>
                <th>Company</th>
                <th>Gender</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in user %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.emailAddress }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ user.registrationDate ? user.registrationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.updateDate ? user.updateDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.profilePicture }}</td>
                <td>{{ user.isAdmin ? 'Yes' : 'No' }}</td>
                <td>{{ user.isOnline ? 'Yes' : 'No' }}</td>
                <td>{{ user.status }}</td>
                <td>{{ user.city }}</td>
                <td>
                        {% for language in user.spokenLanguages %}
                            {{  language }},
                        {% endfor %}
                </td>
                <td>{{ user.company }}</td>
                <td>{{ user.gender }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   {# <a href="{{ path('user_new') }}">Create new</a>#}
{% endblock %}
