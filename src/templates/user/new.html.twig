{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}



    <form method="post">

        <div class="shadow-lg  flex w-8/12 m-auto bg-primary mt-40 mb-40 rounded-btn">
            <div class="p-4 w-8/12 m-auto space-y-3">
                <div class="text-secondary">
                    <h2>S'inscrire</h2>
                </div>

                <div class="flex ">
                    <div class="flex items-center px-3 inline-block">
                            {{ form_widget(form.firstName) }}
                    </div>

                    <span class="flex px-3 inline-block" >
                                {{ form_widget(form.lastName) }}
                        </span>
                </div>

                <div class="flex">
                    <div class="flex items-center px-3 inline-block mr-4">
                            {{  form_widget(form.birthDate) }}
                    </div>

                    <span class="flex inline-block px-3" >
                            {{  form_widget(form.city) }}
                        </span>
                </div>

                <span class="flex items-center  inline-block" >
                        <label for="" class="w-full py-2 px-3 text-primary">
                            {{  form_widget(form.emailAddress) }}
                        </label>
                 </span>

                <span class="flex items-center  inline-block" >
                        <label for="" class="w-full py-2 px-3 text-primary">
                            {{  form_widget(form.password) }}
                        </label>
                    </span>

                <span class="flex items-center inline-block" >
                        <label for="" class="w-full py-2 px-3 text-primary">
                            {{  form_widget(form.passwordConfirm) }}
                        </label>
                    </span>


                <span class="flex items-center inline-block">
                    <label class="w-full py-2 px-3 text-primary">Langue
                        {{  form_widget(form.spokenLanguages) }}
                     </label>
                </span>

                <span class="flex inline-block">
                    <label for="" class="">
                    {{  form_widget(form.accepationCondition) }}
                    </label>
                    <p class="ml-3">j'ai lu et j'accepte les  Conditions Générales d'Utilisation et la  Politique de Protection des Données Personnelles.</p>

                 </span>


                <div class="flex items-center inline-block bg-secondary justify-center hover:bg-primary ">
                    <button class=" hover:bg-blue-400  py-2 text-white">{{ button_label|default('Inscription') }}</button>
                </div>

                <div class="flex items-center inline-blockpx-3 ">

                    <a href="#" class="text-xs underline-none text-blue-400 hover:text-default-soft">Vous avez déjà un compte ? <span style="text-decoration: underline;">Connextez-vous</span></a>
                </div>
            </div>
        </div>
    </form>

    {% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="./index.js"></script>
{% endblock %}
